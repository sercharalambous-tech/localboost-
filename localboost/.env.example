# ─────────────────────────────────────────────────────────
# LocalBoost – Environment Variables
# Copy this file to .env.local for local development
# ─────────────────────────────────────────────────────────

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ── Database (Supabase Postgres / any Postgres) ──────────
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/localboost?schema=public"

# ── Supabase Auth ─────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ── Stripe ────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Price IDs (create in Stripe dashboard)
STRIPE_PRICE_STARTER=price_...   # €19/mo
STRIPE_PRICE_PRO=price_...       # €49/mo
STRIPE_PRICE_PREMIUM=price_...   # €99/mo

# ── Twilio (SMS) ──────────────────────────────────────────
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_FROM_NUMBER=+357XXXXXXXX   # your Twilio number

# ── Postmark (Email) ──────────────────────────────────────
POSTMARK_SERVER_TOKEN=your-postmark-server-token
POSTMARK_FROM_EMAIL=noreply@yourdomain.com
POSTMARK_FROM_NAME=LocalBoost

# ── Cron Security ─────────────────────────────────────────
CRON_SECRET=a-long-random-secret-string

# ── Test Mode (set true to skip real sends in dev) ────────
TEST_MODE=true
